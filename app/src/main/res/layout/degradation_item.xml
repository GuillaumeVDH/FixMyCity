<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

<android.support.v7.widget.CardView
    android:id="@+id/degradation_item_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/degradation_item_imv"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_menu_camera"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/degradation_item_reference"
            android:layout_toRightOf="@+id/degradation_item_imv"
            android:layout_alignParentTop="true"
            android:textSize="22sp"
            tools:text="REFERENCE"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/degradation_item_description"
            android:layout_toRightOf="@+id/degradation_item_imv"
            android:layout_below="@+id/degradation_item_reference"
            tools:text="This is a description"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>

</LinearLayout>